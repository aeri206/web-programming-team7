<head>
		<title>웹프개 7조 - 주린이를 위한 안내서 > 주린이 WIKI</title>
		<meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <%= javascript_include_tag "jquery.min" %>
        <%= javascript_include_tag "browser.min" %>
        <%= javascript_include_tag "breakpoints.min" %>
        <%= javascript_include_tag "util" %>
        <%= javascript_include_tag "main" %>
        <%= stylesheet_link_tag "main", media: "all" %>
</head> 
<body id="article-show">

<!-- W기apper -->
<div id="wrapper">
<div id="main">
        <div class="inner">
            <%= render "header",  locals: { article: @article } %>
                    <!-- Content -->
            <section>
                <% if @article.if_sub %>
                    <h5>
                        <%= link_to @article.title, @title_url %>  &gt;  
                        <%= link_to @article.sub_title, @sub_url %> 
                    </h5>
                <% else %>
                    <h5>
                        <%= link_to @article.title, @title_url %>
                    </h5>
                <% end %>
                    <br>
                <header class="main">
                <% if @article.if_sub %>
                    <h1><%= @article.sub_title %></h1>
                <% else %>
                    <h1><%= @article.title %></h1>
                <% end %>
                </header>
                <div><%= @article.content.html_safe %></div>
                <h5>

                <% if user_signed_in? %>
                    <%= link_to image_tag('full_heart.png', style: 'width: 30px;') + "좋아요 취소",
                                article_like_path(article_id: @article.id),
                                class: 'unlike',
                                style: "display: #{'none' if !current_user.profile.liked_articles.where(id: @article.id).exists?}",
                                remote: true
                                %>
                    <%= link_to image_tag('empty_heart.png', style: 'width: 30px;') + "좋아요",
                                article_like_path(article_id: @article.id),
                                class: 'like',
                                style: "display: #{'none' if current_user.profile.liked_articles.where(id: @article.id).exists?}",
                                remote: true
                                %>
                <% end %>
                <br>

                <% if @next_url %>
                    <%= link_to '다음페이지로 이동', @next_url %><br>
                    <% if @article.if_wiki && @article.if_sub %>
                        <% if user_signed_in? %>
                            <% if !current_user.profile.memos.where(profile: current_user.profile, article: @article).exists? %>
                                <%= link_to '새 메모', memo_new_path(type: 'wiki', chapter: @article.chapter, sub_chapter: @article.sub_chapter) %> 
                            <% else %>               
                                <%= link_to '메모 보기', memo_show_path(type: 'wiki') %>
                            <% end %>
                        <% end %>
                    <% elsif !@article.if_wiki && @article.if_sub %>
                        <% if user_signed_in? %>
                            <% if !current_user.profile.memos.where(profile: current_user.profile, article: @article).exists? %>
                                <%= link_to '새 메모', memo_new_path(type: 'expert', chapter: @article.chapter, sub_chapter: @article.sub_chapter) %> 
                            <% else %>               
                                <%= link_to '메모 보기', memo_show_path(type: 'expert') %>
                            <% end %>
                        <% end %>          
                    <% end %>               
                <% else %>
                    <% if @article.if_wiki %>
                        <%= link_to '첫 페이지로 이동', '/wiki/0' %>
                        <% if user_signed_in? %>
                            <% if !current_user.profile.memos.where(profile: current_user.profile, article: @article).exists? %>
                                <%= link_to '새 메모', memo_new_path(type: 'wiki', chapter: @article.chapter, sub_chapter: @article.sub_chapter) %> 
                            <% else %>               
                                <%= link_to '메모 보기', memo_show_path(type: 'wiki') %>
                            <% end %>
                        <% end %>               
                    <% else %>
                        <%= link_to '첫 페이지로 이동', '/expert/0' %>
                        <% if user_signed_in? %>
                            <% if !current_user.profile.memos.where(profile: current_user.profile, article: @article).exists? %>
                                <%= link_to '새 메모', memo_new_path(type: 'expert', chapter: @article.chapter, sub_chapter: @article.sub_chapter) %> 
                            <% else %>               
                                <%= link_to '메모 보기', memo_show_path(type: 'expert') %>
                            <% end %>
                        <% end %>               
                    <% end %>
                <% end %>
                </h5>
            </section>
        </div>
</div> 
<%= render "sidebar" %>
</div> 
</body>



