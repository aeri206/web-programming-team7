<div class="input-group mb-3 <%= myclass %>">
<div class="input-group-prepend">
    <div class="input-group-text">
    <%= check_box_tag "filter_" + myclass  %>
</div>

<% if local_assigns[:popover]%>
    <span class="input-group-text clickable" data-toggle="popover"
    title=<%= title %> data-content='<%= data %> <a href=<%= link %> > 🐥 주린이 위키 설명 바로가기</a>'    ><%= sup %> <sup>?</sup><%= sub %></span>
<% else %>
    <span class="input-group-text" ><%= title %></span>
<% end %>

</div>
<%= text_field_tag myclass+"_value", value=nil, :class=> 'form-control' %>
<div class="input-group-append">
<span class="input-group-text"><%= addon %></span>
</div>
</div>
